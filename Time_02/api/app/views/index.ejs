<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://getbootstrap.com/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
    <link href="https://getbootstrap.com/docs/4.0/examples/product/product.css" rel="stylesheet">
    <title>Projeto STAGIHO-BD</title>
</head>
<body>
    <nav class="site-header sticky-top py-1">
        <div class="container d-flex flex-column flex-md-row justify-content-between">
            <a class="py-2" href="#">
                Projeto STAGIHO-BD
            </a>
            <a class="py-2 d-none d-md-inline-block" href="#">Leitos</a>
            <a class="py-2 d-none d-md-inline-block" href="#">Reseva</a>
        </div>
    </nav>
    <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center">
        <div class="row">
            <div class="col-md-2 p-lg-2"><label for="select" style="float: right;">Setor: </label></div>
            <div class="col-md-2 p-lg-2">
                <form action="/view" method="get">
                    <select id="filterOption" name="filterOption">
                        <option value="ortopedia e traumatologia">Ortopedia e Traumatologia</option>
                        <option value="emergencia">EmergÃªncia</option>
                        <option value="uti">UTI</option>
                    </select>
                    <button class="btn btn-primary btn-sm" type="submit" value="Submit" style="margin-left: 25px;">Buscar</button>
                </form>
            </div>
        </div>
        <div class="row">
            <% for (ret of result.reserva){%>
                <%if (ret.id_paciente != undefined && ret.id_leito != undefined && ret.id_especialista != undefined && ret.id_plantonista != undefined) { %>
                    <div class="col-md-3 p-lg-3 mx-auto">
                        <div class="card" style="width: 18rem; text-align: left;">
                            <div class="card-body" style="background-color: #c56262">
                                <p><b>ID Paciente: </b><%= ret.id_paciente %></p>
                                <p><b>ID Leito: </b><%= ret.id_leito %></p>
                                <p><b>ID Especialista: </b><%= ret.id_especialista %></p>
                                <p><b>ID Plantonista: </b><%= ret.id_plantonista %></p>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% } %>
        </div>
                <div class="row">
                    <% for (ret of result.leitos){%>
                        <div class="col-md-3 p-lg-3 mx-auto">
                            <div class="card" style="width: 18rem; text-align: left;">
                                <div class="card-body" style="background-color: #449651">
                                    <p><b>Hospital: </b><%= ret.hospital %></p>
                                    <p><b>Status: </b><%= ret.status %></p>
                                    <p><b>Andar: </b><%= ret.andar %></p>
                                    <p><b>Setor: </b><%= ret.setor %></p>
                                    <p><b>Ala: </b><%= ret.ala %></p>
                                    <p><b>Tipo: </b><%= ret.tipo %></p>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
                <!-- Optional JavaScript -->
                <!-- jQuery first, then Popper.js, then Bootstrap JS -->
                <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
                <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
            </body>
            </html>
